<div class="card-container">
  <% @clowns.each do |clown| %>
    <%= content_tag :div, class: 'card' do %>
      <%= link_to clown_path(clown), class: 'card-link' do %>
        <%= content_tag :div, class: 'card-content' do %>
      <%= cl_image_tag clown.photo.key, height: 200, width: 250, crop: :fill %>
          <h2 class="card-title"><%= clown.username %></h2>
          <p class="card-info"><%= clown.category %></p>
          <p class="card-info"><%= clown.localisation %></p>
          <p class="card-info"><%= clown.price %>€/h</p>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
